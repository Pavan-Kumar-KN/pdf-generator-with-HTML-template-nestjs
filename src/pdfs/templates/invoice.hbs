<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    .header {
      text-align: center;
      margin-bottom: 30px;
    }
    .invoice-details {
      display: flex;
      justify-content: space-between;
      margin-bottom: 30px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .total {
      margin-top: 20px;
      text-align: right;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>{{title}}</h1>
    <p>Invoice #{{invoiceNumber}}</p>
  </div>
  
  <div class="invoice-details">
    <div>
      <h3>From:</h3>
      <p>{{company.name}}</p>
      <p>{{company.address}}</p>
      <p>{{company.email}}</p>
    </div>
    <div>
      <h3>To:</h3>
      <p>{{customer.name}}</p>
      <p>{{customer.address}}</p>
      <p>{{customer.email}}</p>
    </div>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.quantity}}</td>
        <td>${{this.price}}</td>
        <td>${{this.total}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  
  <div class="total">
    <p>Subtotal: ${{subtotal}}</p>
    <p>Tax ({{taxRate}}%): ${{taxAmount}}</p>
    <p>Total: ${{total}}</p>
  </div>
</body>
</html>